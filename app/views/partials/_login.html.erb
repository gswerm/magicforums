<div class="modal fade" id="login">
   <div class="modal-dialog">
     <div class="modal-content">
       <div class="modal-body">
         <div class="text-center margin-create">

           <h1 class="text-center">
             Login
           </h1>

           <%= form_for(:user,url: sessions_path, html: { id: "user-create-form" })  do |f| %>


             <div class="form-group">
             <h4> <%= f.label :email %> </h4>
             <%= f.text_field :email, required: true, id: "user_field", class: 'form-control' %>
           </div>

           <div class="form-group">
             <h4> <%= f.label :password %> </h4>
             <%= f.password_field :password, id: "Password_field", class: 'form-control' %>
           </div>

           <div class="font-feature-new text-center">
             <%= f.submit "Login", class: "btn btn-success btn-lg" %>
             <%=link_to "Sign Up", new_user_path, class: "btn btn-info btn-lg" %>
             <%=link_to "Reset Password", new_password_reset_path, class: "btn btn-info btn-lg" %>
             <%=link_to "Back to topics", topics_path, class: "btn btn-info btn-lg" %>
           </div>


         <% end %>
         </div>

       </div>
     </div>
   </div>
 </div>
