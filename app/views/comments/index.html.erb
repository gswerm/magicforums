<div class="comments index" data-id="<%= @post.id %>">

  <h1>Comments</h1>

  <div id="comments">
    <% @comments.each do |comment| %>
    <div class="text-center">
    <%= render partial: "comment", locals: { comment: comment, post: @post, topic: @topic, extra_class: '' } %>
  </div>
  <% end %>
  </div>

  <%= paginate @comments %>
  <%= page_entries_info @comments %>

  <div id="comments-form-container">
    <%= render partial: "create_form", locals: { comment: @comment, post: @post } %>
  </div>

</div>
