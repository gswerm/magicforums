$('#flash-messages-container').html("<%=j render partial: 'partials/flash_messages' %>")

<% if @comment.persisted? %>
$('#comments').append("<%=j render partial: 'comments/comment', locals: { comment: @comment, post: @comment.post, topic: @topic, extra_class: '' } %>")
